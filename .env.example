# AUTH.JS
AUTH_SECRET=...
# Keycloak (SSO) via AUTH_* variables
# Development: credentials login is available without these variables.
# Production: these are required and the auth module will fail fast if missing.
AUTH_KEYCLOAK_ID=your-client-id
AUTH_KEYCLOAK_SECRET=your-client-secret
AUTH_KEYCLOAK_ISSUER=https://keycloak.example.com/realms/your-realm

# backend
BACKEND_API_URL=http://localhost:8000
BACKEND_API_TIMEOUT=60000 # miliseconds

# Database Configuration (Required)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=admin1234
POSTGRES_DB=omnia_platform
POSTGRES_SSL=false

# AWS SES Configuration (Required)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
# AWS_SESSION_TOKEN=your_session_token  # Optional, for temporary credentials

# Application Configuration (Optional)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# TypeORM Configuration (Optional)
# TYPEORM_LOGGING=true
# TYPEORM_SYNCHRONIZE=true

# Node Environment (Optional)
# NODE_ENV=development